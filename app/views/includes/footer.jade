footer
	.navbar.navbar-default.navbar-fixed-bottom
		.container
			.navbar-header
				a.navbar-brand(href="/") Ninico电影小站
			if user
				.navbar-text.navbar-right
					span 欢迎您，#{user.username}
					span &nbsp; | &nbsp;
					a.navbar-link(href="user/logout") 登出
			else
				.navbar-text.navbar-right
					a.navbar-link(href="#" data-toggle="modal" data-target="#signupModal") 注册
					span &nbsp; | &nbsp;
					a.navbar-link(href="#" data-toggle="modal" data-target="#signinModal") 登陆
	#signupModal.modal.jade
		.modal-dialog
			.modal-content
				form(method="POST" ,action="/user/signup")
					.modal-header 注册
					.modal-body
						.form-group
							label(for="signupName")
							input#signupName.form-control(name="user[username]",type="text")
						.form-group
							label(for="signupPassword")
							input#signupPassword.form-control(name="user[password]",type="password")
					.modal-footer
						button.btn-default.btn(type="button" data-dismiss="modal") 关闭
						button.btn-success.btn(type="submit") 提交
	#signinModal.modal.jade
		.modal-dialog
			.modal-content
				form(method="POST",action="/user/signin")
					.modal-header 登陆
					.modal-body
						.form-group
							label(for="#signinName")
							input#signinName.form-control(name="user[username]",type="text")
						.form-group
							label(for="#signinPassword")
							input#signinPassword.form-control(name="user[password]",type="password")
					.modal-footer
						button.btn.btn-default(type="button",data-dismiss="modal") 关闭
						button.btn.btn-success(type="submit") 提交


	